<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/css/bootstrap.min.css">
  </head>
  <body>
    <div class="container">
      <% include ./partials/nav %>
        <p>&nbsp;</p>
        <div class="card" style="width: 50%">
            <div class="form-group">
                <label for="summary" class="text-primary">Blog Title</label>
                <input readonly class="form-control" id="blogTitle" name="blogTitle" value="<%=blog.blogTitle%>"></textarea>

                <label for="detail" class="text-primary">Blog Text</label>
                <input readonly class="form-control" id="blogText" name="blogText" value="<%=blog.blogText%>"></textarea>
            </div>
           <form method="post" action="/blog-delete/<%=blog._id%>" style="padding: 20px">
               <input type="submit" class="btn btn-danger float-right" value="Delete Blog">
               <a class="btn btn-primary float-right" style="margin-right: 25px" href="/blog-list" role="button">Cancel</a>
           </form>
        </div>
    </div> <!-- container -->
  </body>
  <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
</html>
